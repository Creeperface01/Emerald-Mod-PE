<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.razvanmcrafter.addon.emeraldmod.MainActivity">

<ScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="12dp"
	android:paddingRight="12dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/step_one"
		android:id="@+id/stepOneTxt"
		android:textSize="18sp"
		android:textColor="#000000"
		android:layout_marginTop="12dp"
		android:gravity="center"
		android:layout_centerHorizontal="true"/>
	
	<Button
		android:onClick="hideApp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/app_hide"
		android:id="@+id/hideBtn"
		android:textSize="18sp"
		android:layout_below="@+id/stepTwoTxt"
		android:layout_marginTop="30dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_hide_desc"
		android:id="@+id/hideTxt"
		android:textSize="18sp"
		android:gravity="center"
		android:layout_below="@+id/hideBtn"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/step_two"
		android:id="@+id/stepTwoTxt"
		android:textSize="18sp"
		android:textColor="#000000"
		android:gravity="center"
		android:layout_below="@+id/downloadBLBtn"
		android:layout_centerHorizontal="true"/>

	<Button
		android:onClick="downloadBL"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/download_bl"
		android:id="@+id/downloadBLBtn"
		android:textSize="18sp"
		android:layout_below="@+id/stepOneTxt"/>
	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="CopyrightÂ© Razvan MCrafter"
		android:textSize="20sp"
		android:layout_below="@+id/hideTxt"
		android:layout_marginTop="50dp"
		android:gravity="center"
		android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>
</RelativeLayout>
